<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".CarDengji2" 
    android:focusable="true"  
    android:focusableInTouchMode="true"
    >

    
    <!-- 页面显示内容 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/bg"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="500dip"
            android:layout_height="35dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="80dip"
            android:background="@drawable/common_titlebar" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/line"
                android:src="@drawable/title_bar_jiantou" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="修改密码"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            
        </RelativeLayout>
        <LinearLayout 
            android:layout_width="500dip"
            android:layout_height="350dip"
            android:background="@drawable/settingbg"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout 
                
                android:layout_width="fill_parent"
            	android:layout_height="70dip"
            	android:gravity="center_vertical"
                >
                <TextView 
                    android:layout_width="150dip"
            		android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="当前密码："
                    android:textSize="20dip"
                    />

                <EditText
                    android:id="@+id/activity_tab3_edit1"
                    android:layout_width="260dip"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:singleLine="true" />

            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="fill_parent"
            	android:layout_height="70dip"
            	android:gravity="center_vertical"
                >
                <TextView 
                    android:layout_width="150dip"
            		android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="新密码："
                    android:textSize="20dip"
                    />

                <EditText
                    android:id="@+id/activity_tab3_edit2"
                    android:layout_width="260dip"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:singleLine="true" />

            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="fill_parent"
            	android:layout_height="70dip"
            	android:gravity="center_vertical"
                >
                <TextView 
                    android:layout_width="150dip"
            		android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="重复确认："
                    android:textSize="20dip"
                    />

                <EditText
                    android:id="@+id/activity_tab3_edit3"
                    android:layout_width="260dip"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:singleLine="true" />

            </LinearLayout>
            
            <Button
                android:id="@+id/activity_tab3_btn1"
                android:layout_width="330dip"
                android:layout_height="50dip"
                android:layout_marginTop="30dip"
                android:background="@drawable/btn_style_1"
                android:text="确认修改"
                android:textColor="@color/white"
                android:textSize="20dip" />
            
        </LinearLayout>
        
        
        
        
        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="500dip"
            android:layout_height="35dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="80dip"
            android:background="@drawable/common_titlebar" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/line"
                android:src="@drawable/title_bar_jiantou" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="关于"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            
        </RelativeLayout>
        <LinearLayout 
            android:layout_width="500dip"
            android:layout_height="350dip"
            android:background="@drawable/settingbg"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
                <TextView 
                    android:layout_marginTop="30dip"
                    android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
                    android:text="@string/version2"
                    android:textSize="20dip"
                    
                    />
              
            <Button
                android:id="@+id/activity_tab3_btn2"
                android:layout_width="330dip"
                android:layout_height="50dip"
                android:layout_marginTop="150dip"
                android:background="@drawable/btn_style_1"
                android:text="检查新版本"
                android:textColor="@color/white"
                android:textSize="20dip" />
            
        </LinearLayout>
        
        
        
    </LinearLayout>

</RelativeLayout>