<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tab_style_title_bg"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="@drawable/tab_selector_title" >

            <ImageView
                android:layout_width="0.25dip"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/k3_repeat" />

            <TextView
                android:id="@+id/tab_label_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_one_name"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="0.25dip"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:src="@drawable/k3_repeat"/>
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>