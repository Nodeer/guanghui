<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="500dip"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog2"
    android:orientation="vertical" >
    
    <!-- 标题 -->

    <LinearLayout
        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="8dip"
        android:gravity="center_vertical" >

        <ImageView 
       android:id="@+id/dialog_one_icon"
       android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="@drawable/icon_question"
        />
	    <TextView 
	        android:layout_marginLeft="10dip"
	        android:id="@+id/dialog_one_button_title"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	        android:text="@string/prompt"
	        android:textSize="20dip"
	        android:textColor="@color/white"
	        android:textStyle="bold"
	        />
	</LinearLayout>
	
    <!-- 门店 -->
	
	
    <!-- 课程名 -->
    <LinearLayout 
        android:layout_marginTop="8dip"
        android:layout_marginLeft="10dip"
	    android:layout_marginRight="10dip"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
        >
	    <TextView 
	        android:layout_marginLeft="10dip"
	        android:id="@+id/dialog_one_button_message"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	        android:text="对话框消息"
	        android:textSize="20dip"
	        android:textColor="#E0E0E0"
	        />
	</LinearLayout>
	
     <!-- 课程时间 -->
	
    <!-- 课程时地点-->
	
    
    <!-- 确认，取消按钮-->
    <LinearLayout 
        android:layout_marginTop="12dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginBottom="8dip"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
        >
	    <Button 
	        android:id="@+id/dialog_one_button_ok"
	        android:layout_width="130dip"
	    	android:layout_height="wrap_content"
	        android:text="@string/ok"
	        android:textSize="18dip"
	        android:textColor="@color/white"
	        android:background="@drawable/btn_style_one"
	        />
	    
	</LinearLayout>
    

</LinearLayout>