<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity"
    android:background="#272727"
    android:focusable="true"  
    android:focusableInTouchMode="true"
    >

    <LinearLayout
        android:layout_width="550dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dip"
        android:background="#F0F0F0" 
        android:orientation="vertical">        
        <!-- Logo和版本号 -->"
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="#d0d0d0" 
        >        
        <TextView 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/version"
        	android:textSize="25dip"
        	android:textStyle="bold"
        	android:layout_marginLeft="450dip"
        	android:layout_marginTop="50dip"
        	android:textColor="#3C3C3C"
            />
        </LinearLayout>
        
        
        <!-- 锁定提示 -->
        <LinearLayout
        android:id="@+id/login_ly_login_out"
        android:layout_marginTop="30dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal"
        >        
        <TextView 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/login_suoding_tip"
        	android:textSize="20dip"        	
        	android:textColor="#4F4F4F"
            />

        <TextView
            android:id="@+id/login_zhuxiao_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:text="xxx用户"
            android:textColor="#CE0000"
            android:textSize="20dip" />

        </LinearLayout>
        
        
        
        
        <!-- 输入框 -->               
        <LinearLayout
        android:layout_marginTop="20dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal"
        >
         <!-- 帐号 -->
       		<RelativeLayout
       		    
       		android:id="@+id/login_userName_rely2"
			android:paddingBottom="10.0px" android:layout_width="400dip"
			android:layout_height="wrap_content" android:layout_marginLeft="15.0px"
			android:layout_marginTop="20.0px" android:layout_marginRight="15.0px">
			<EditText android:id="@+id/login_edt_username"
			    android:hint="@string/username"
				android:saveEnabled="true" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_marginLeft="20.0dip"
				android:layout_marginTop="5.0dip" android:layout_marginRight="20.0dip"
				android:layout_marginBottom="5.0px"
				android:maxLength="20"
				android:layout_alignParentTop="true"
				/>

           </RelativeLayout>
       <!-- 密码 -->
       		<RelativeLayout
			android:paddingBottom="10.0px" android:layout_width="400dip"
			android:layout_height="wrap_content" android:layout_marginLeft="15.0px"
			android:layout_marginTop="15.0px" android:layout_marginRight="15.0px">
			<EditText android:id="@+id/login_edt_userpassword"
			    android:hint="@string/password"
				android:saveEnabled="true" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_marginLeft="20.0dip"
				android:layout_marginTop="5.0dip" android:layout_marginRight="20.0dip"
				android:layout_marginBottom="5.0px"
				android:maxLength="20"
				android:layout_alignParentTop="true" android:inputType="textPassword"
				/>

           </RelativeLayout>
           
        <Button
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/login_style" />
        
        <ImageView 
            android:layout_marginTop="20dip"
            android:layout_height="2dip"
            android:layout_width="fill_parent"
            android:background="@drawable/k"
            />
        
        </LinearLayout>
        
        <!-- 底部 -->
        <LinearLayout
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        >     
        <TextView 
            android:text="@string/login_bottom"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="20dip"
        	android:textColor="#9D9D9D"
            />
        
        <ImageView 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:background="@drawable/tel"
            />
        
        <TextView 
            android:text="@string/login_bottom_tel_number"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="20dip"
        	android:textColor="#8E8E8E"
            />
        </LinearLayout>
    </LinearLayout>
    

</LinearLayout>