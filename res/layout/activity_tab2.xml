<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".CarDengji2" >

    
    <!-- 页面显示内容 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/bg"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="730dip"
            android:layout_height="35dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/common_titlebar" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/line"
                android:src="@drawable/title_bar_jiantou" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="通知"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            
         <Button                
                android:id="@+id/tongzhi_more"
                android:layout_marginTop="2dip"
                android:layout_marginBottom="1dip"
                android:layout_marginRight="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_refresh" /> 
            
        </RelativeLayout>
        <LinearLayout 
            android:layout_width="730dip"
            android:layout_height="450dip"
            android:orientation="vertical"
            android:gravity="center"
            >
        <ListView
                android:id="@+id/activity_tab2_listview1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1dip"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:background="@drawable/car_check_linearlayout"
                android:cacheColorHint="#00000000"              
                android:divider="@drawable/k2"
				android:dividerHeight="2dip"
				android:fadeScrollbars="false"
                >
            </ListView>
            
        </LinearLayout>
        
        
        
        
        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="730dip"
            android:layout_height="35dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="30dip"
            android:background="@drawable/common_titlebar" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/line"
                android:src="@drawable/title_bar_jiantou" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:text="新闻动态"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            
      <Button
                android:id="@+id/xinwen_more"
                android:layout_marginTop="2dip"
                android:layout_marginBottom="1dip"
                android:layout_marginRight="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_refresh" /> 
            
            
        </RelativeLayout>
        <LinearLayout 
            android:layout_width="730dip"
            android:layout_height="450dip"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ListView
                android:id="@+id/activity_tab2_listview2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1dip"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:background="@drawable/car_check_linearlayout"
                android:cacheColorHint="#00000000"                
                android:divider="@drawable/k2"
				android:dividerHeight="2dip"
				android:fadeScrollbars="false"
                >
            </ListView>
            
        </LinearLayout>
        
        
        
    </LinearLayout>

</RelativeLayout>