<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="500dip"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog2"
	>

    
    <!-- 标题 -->
    <LinearLayout 
        android:layout_marginTop="8dip"
        android:layout_marginLeft="5dip"
	    android:layout_marginRight="5dip"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/dialog_two_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_question" />

	    <TextView 
	        android:layout_marginLeft="10dip"
	        android:id="@+id/dialog_one_button_title"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	        android:text="请输入取消原因"
	        android:textSize="20dip"
	        android:textColor="@color/white"
	        android:textStyle="bold"
	        />
	</LinearLayout>
	
    <!-- 门店 -->
	
	
    <!-- 课程名 -->
    <LinearLayout 
        android:layout_marginTop="8dip"
        android:layout_marginLeft="10dip"
	    android:layout_marginRight="10dip"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
        >
	    <EditText 
	        android:layout_marginLeft="10dip"
	        android:id="@+id/canceldetection_dialog_edit"
	        android:layout_width="fill_parent"
	        android:lines="3"
	    	android:layout_height="wrap_content"
	        android:textSize="20dip"
	        android:hint="取消原因"
	        android:gravity="top"
	        android:maxLength="100"
	        />
	</LinearLayout>
	
     <!-- 课程时间 -->
	
    <!-- 课程时地点-->
	
    
    <!-- 确认，取消按钮-->
    <LinearLayout 
        android:layout_marginTop="12dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginBottom="8dip"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
        >

	    <Button
	        android:id="@+id/canceldetection_dialog_btn_ok"
	        android:layout_width="130dip"
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn_style_one"
	        android:text="@string/ok"
	        android:textColor="@color/white"
	        android:textSize="18dip" />
	    
	</LinearLayout>
    

</LinearLayout>