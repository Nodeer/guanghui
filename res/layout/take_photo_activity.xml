<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:gravity="center"
    android:orientation="vertical" >
    
    <TextView 
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:id="@+id/take_photo_activity_name"
        android:text="测试标题"
        android:textSize="30dip"
        android:textStyle="bold"
        android:layout_marginBottom="20dip"
        />
    
    <TextView 
        android:id="@+id/take_photo_activity_name2"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:text="为了提高准确度，请将“中华人民共和国机动车行驶证”文字放在红框内，请保持平稳，行驶证避免反光。"
        android:textSize="25dip"
        android:textColor="@color/red"
        android:layout_marginBottom="20dip"
        />
    
    
    <LinearLayout 
        android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:gravity="center"
        >
    
    <Button 
		android:text="拍照"
		android:layout_width="160dip"
		android:layout_height="100dip"
		android:id="@+id/takepic"
		android:textSize="20dip"
		android:textColor="@color/white"
		android:background="@drawable/btn_style_1"
	/>
    
    <FrameLayout 
        android:layout_marginLeft="20dip"
        android:layout_width="800dip"
		android:layout_height="550dip"
        >
        
        
        
        <SurfaceView 
		android:id="@+id/surface_camera"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		/>  
       
        <RelativeLayout 
            android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:id="@+id/tabke_photo_ly_1"
            >
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_top_left"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"    
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"            
                />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_top_right"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"   
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"                         
                />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_bottom_left"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true" 
                android:layout_marginLeft="10dip"
                android:layout_marginBottom="10dip"                           
                />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_bottom_right"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"    
                android:layout_marginRight="10dip"
                android:layout_marginBottom="10dip"                        
                />
            
        </RelativeLayout>
        
        
        
        <RelativeLayout 
            android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:id="@+id/tabke_photo_ly_2"
            >
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/take_photo_bg_1"
                />           
        </RelativeLayout>
        
    </FrameLayout>
    
    
    <Button 
	    android:layout_marginLeft="20dip"
		android:text="取消"
		android:textSize="20dip"
		android:layout_width="160dip"
		android:layout_height="100dip"
		android:id="@+id/exit"
		android:textColor="@color/white"
		android:background="@drawable/btn_style_1"
	/>
    
    </LinearLayout>
	

</LinearLayout>
