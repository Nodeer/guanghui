<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/task_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/layout_title" />

        <include layout="@layout/layout_common_tab_title" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="#666666" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆成交信息"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="20sp" />
            
            
            <Button
                    android:id="@+id/check_task_preview_btn_back"
                    android:layout_width="120dip"
                    android:layout_height="50dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dip"
                    android:background="@drawable/btn_style_2"
                    android:text="@string/back"
                    android:textColor="@color/white"
                    android:textSize="16dip" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/check_task1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <include layout="@layout/common_bottom" />
    </LinearLayout>

    
    
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/check_task1"
        android:layout_below="@id/task_title_layout"
        >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/bg"
        android:orientation="vertical" >

        
        
        
        
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/car_check_linearlayout"
            android:orientation="vertical" >
            
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:background="@drawable/common_titlebar" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="成交信息填写"
                    android:textColor="#ff1f34"
                    android:textSize="17sp" />
            </LinearLayout>
            
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/car_check_linearlayout"
            android:orientation="vertical" >

            
            
             <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="5dip"
                 >
            
            
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="最近一次收购报价："
                    android:textColor="#ff1f34"
                    android:visibility="gone"
                    android:textSize="17sp" />
            
            	<TextView
            	    android:id="@+id/check_task_preview3_txt1"
            	    android:layout_width="120dip"
            	    android:layout_height="fill_parent"
            	    android:layout_marginLeft="10dp"
            	    android:gravity="center_vertical"
            	    android:text="￥0"
            	    android:visibility="gone"
            	    android:textSize="17sp" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="历史报价次数："
                    android:textColor="#ff1f34"
                    android:textSize="17sp" />
                
                <TextView
                    android:id="@+id/check_task_preview3_txt2"
                    android:layout_width="200dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="0次"
                    android:textSize="17sp" />
            
                
                <Button 
                     android:id="@+id/check_task_preview3_btn_price_select"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="查看门店报价"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_style_one"
                    />
                
                
            </LinearLayout>
            
             
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="5dip"
                 >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="车辆评估价格："
                    android:textColor="#ff1f34"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/check_task_price"
                    android:layout_width="300dip"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="0"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="@string/price_danwei"
                    android:textColor="#000000"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="125dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:text="@string/shangjijieguo"
                    android:textColor="#ff1f34"
                    android:textSize="17sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <LinearLayout 
                        android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"
                    	android:orientation="vertical"
                        >
                  
                    <TextView
                        android:layout_width="70dip"
                        android:textSize="17sp"
                        android:layout_height="wrap_content"
                        android:text="成交        " />

                    <com.guanghui.car.ui.FlowRadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                    <RadioButton
                        android:id="@+id/check_task_radiobutton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="置换收购" />

                    <RadioButton
                        android:id="@+id/check_task_radiobutton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:text="寄售" />
                    
                    <RadioButton
                        android:id="@+id/check_task_radiobutton4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:text="直接收购" />
                    
                    <RadioButton
                        android:id="@+id/check_task_radiobutton5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:text="广汇试乘试驾" />

                  
                    <RadioButton
                        android:id="@+id/check_task_radiobutton6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dip"
                        android:text="广汇租赁" />
                    
                     <RadioButton
                         android:id="@+id/check_task_radiobutton7"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"                         
                        android:layout_marginLeft="20dip"
                         android:text="收费评估" />

                    </com.guanghui.car.ui.FlowRadioGroup>
                     
                     <LinearLayout 
                        android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"
                    	android:gravity="center_vertical"
                        >

                    <TextView
                        android:layout_width="70dip"
                        android:textSize="17sp"
                        android:layout_marginBottom="5dip"
                        android:layout_height="wrap_content"
                        android:text="未成交" />
                    
			

                
                     </LinearLayout>
                     
                     <EditText
                    android:id="@+id/check_task_reson"
                    android:layout_width="400dip"
                    android:layout_height="wrap_content"
                    android:hint="@string/undo_reson2"
                    
                    android:layout_gravity="center_vertical" >
                </EditText>
                
                     </LinearLayout>
                     
                </RadioGroup>
            </LinearLayout>
 		</LinearLayout>
           
        </LinearLayout>
    </LinearLayout>
    
	</ScrollView>

</RelativeLayout>