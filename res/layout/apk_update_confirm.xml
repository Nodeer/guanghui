<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="470dip"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog2"
	>

    
    <!-- 标题 -->
    <LinearLayout 
        android:layout_marginTop="8dip"
        android:layout_marginLeft="5dip"
	    android:layout_marginRight="5dip"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_vertical"
        >
        <ImageView 
       android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="@drawable/icon_question"
        />
	    <TextView 
	        android:layout_marginLeft="10dip"
	        android:id="@+id/schedule_confirm_title"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	        android:text="软件更新"
	        android:textSize="20dip"
	        android:textColor="@color/white"
	        android:textStyle="bold"
	        />
	</LinearLayout>
	
   
	
	
    <!-- 更新信息 -->
    <LinearLayout 
        android:layout_marginTop="8dip"
        android:layout_marginLeft="10dip"
	    android:layout_marginRight="10dip"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
        >
	    <TextView 
	        android:layout_marginLeft="10dip"
	        android:id="@+id/apk_update_confirm_message"
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	        android:text="检测到新版本,是否立即进行更新?"
	        android:gravity="center_horizontal"
	        android:textSize="18dip"
	        android:textColor="#E0E0E0"
	        />
	</LinearLayout>
	
	
    
    <!-- 确认，取消按钮-->

    <LinearLayout 
        android:layout_marginTop="12dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginBottom="8dip"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
        >
	    <Button 
	        
	        android:id="@+id/apk_update_confirm_ok"
	        android:layout_width="100dip"
	    	android:layout_height="wrap_content"
	        android:text="更新"
	        android:textSize="18dip"
	        android:textColor="@color/white"
	        android:background="@drawable/btn_style_one"
	        />
	    
        <Button
            android:layout_marginLeft="20dip"
        android:id="@+id/apk_update_confirm_cancel"
       	android:layout_width="100dip"
    	android:layout_height="wrap_content"
    	android:text="稍候更新"
    	android:textSize="18dip"
    	android:textColor="@color/white"
    	android:background="@drawable/btn_style_zero"
        />
	    
	</LinearLayout>
    

</LinearLayout>